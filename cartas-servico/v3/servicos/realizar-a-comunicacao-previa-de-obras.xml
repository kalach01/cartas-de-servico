    </validade-documento>
    <etapas>
        <etapa id="9939">
            <titulo>Cadastrar-se no Sistema</titulo>
            <descricao>Você inicialmente irá cadastrar-se no sistema SCPO.</descricao>
            <documentos>
                <default>
                    <item id="14319">CPF</item>
                    <item id="14320">Data de Nascimento</item>
                    <item id="14321">E-mail</item>
                </default>
            </documentos>
            <custos>
